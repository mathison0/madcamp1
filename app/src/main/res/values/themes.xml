<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- NoActionBar + fullscreen 스타일 -->
    <style name="Theme.Madcamp1.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item> <!-- 배경 깜빡임 방지 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item> <!-- 상태바까지 제거 -->
    </style>

    <style name="Theme.Madcamp1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>